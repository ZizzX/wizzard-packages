{
    "name": "@wizzard/core",
    "version": "2.1.0",
    "description": "Core logic for Wizzard Stepper - framework agnostic store and utilities.",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup src/index.ts --format cjs,esm --watch --dts",
        "lint": "eslint .",
        "test": "vitest",
        "test:run": "vitest run",
        "type-check": "tsc --noEmit"
    },
    "keywords": [
        "wizard",
        "stepper",
        "state-management",
        "headless"
    ],
    "author": "ZizzX",
    "license": "MIT",
    "devDependencies": {
        "tsup": "^8.3.5",
        "typescript": "^5.7.2",
        "vitest": "^2.1.8",
        "yup": "^1.6.1",
        "zod": "^3.24.1"
    }
}