{
  "name": "@wizzard-packages/core",
  "version": "0.4.0",
  "description": "Core logic for Wizzard Stepper - framework agnostic store and utilities.",
  "repository": {
    "type": "git",
    "url": "https://github.com/ZizzX/wizzard-packages.git",
    "directory": "packages/core"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup src/index.ts --format cjs,esm --watch --dts",
    "lint": "eslint .",
    "test": "vitest",
    "test:run": "vitest run",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "wizard",
    "stepper",
    "state-management",
    "headless",
    "workflow",
    "state-machine"
  ],
  "author": "ZizzX",
  "license": "MIT",
  "devDependencies": {
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16",
    "yup": "^1.6.1",
    "zod": "^3.24.1"
  }
}
