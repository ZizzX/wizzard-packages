{
  "name": "@wizzard-packages/react",
  "version": "0.1.0",
  "description": "React components and hooks for Wizzard Stepper.",
  "repository": {
    "type": "git",
    "url": "https://github.com/ZizzX/wizzard-packages.git",
    "directory": "packages/react"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup src/index.ts --format cjs,esm --watch --dts",
    "lint": "eslint .",
    "test": "vitest",
    "test:run": "vitest run",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@wizzard-packages/core": "workspace:*",
    "@wizzard-packages/middleware": "workspace:*",
    "@wizzard-packages/persistence": "workspace:*"
  },
  "devDependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16",
    "@testing-library/react": "^16.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "jsdom": "^25.0.1",
    "@vitejs/plugin-react": "^4.3.4"
  }
}
