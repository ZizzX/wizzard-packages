{
  "name": "wizzard-packages",
  "private": true,
  "version": "0.1.0",
  "description": "A flexible, headless, and strictly typed multi-step wizard library for React.",
  "type": "module",
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint": "pnpm -r lint",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "pnpm test:run && pnpm test:e2e",
    "type-check": "pnpm -r type-check",
    "docs:api": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:ui": "pnpm --filter @wizzard-packages/ui dev",
    "docs:ui:build": "pnpm --filter @wizzard-packages/ui build",
    "changeset": "changeset",
    "release": "changeset version",
    "release:publish": "changeset publish",
    "commit": "cz",
    "prepare": "husky || true"
  },
  "overrides": {
    "glob": "^9.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "keywords": [
    "react",
    "wizard",
    "stepper",
    "form",
    "multi-step"
  ],
  "author": "Aziz Isapov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZizzX/wizzard-stepper-react.git"
  },
  "bugs": {
    "url": "https://github.com/ZizzX/wizzard-stepper-react/issues",
    "email": "zizzxiii@gmail.com"
  },
  "homepage": "https://zizzx.github.io/wizzard-stepper-react/",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "yup": "^1.0.0",
    "zod": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    },
    "yup": {
      "optional": true
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@changesets/cli": "^2.27.8",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.16",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.2",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.24.0",
    "vitest": "^4.0.16",
    "yup": "^1.7.1",
    "zod": "^4.2.1"
  }
}
